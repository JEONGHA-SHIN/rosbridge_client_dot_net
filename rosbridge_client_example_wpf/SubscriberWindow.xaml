<Window x:Class="rosbridge_client_example_wpf.SubscriberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscriber" Height="500" Width="300"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="TopicLabel" Grid.Row="0">Received Messages:</Label>
        <ListBox Grid.Row="1" x:Name="MessagesListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
    </Grid>
</Window>
